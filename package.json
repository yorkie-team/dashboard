{
  "name": "dashboard",
  "version": "0.4.23",
  "private": true,
  "homepage": "https://yorkie.dev/dashboard",
  "dependencies": {
    "@bufbuild/buf": "^1.34.0",
    "@bufbuild/protobuf": "^1.10.0",
    "@bufbuild/protoc-gen-es": "^1.10.0",
    "@connectrpc/connect": "^1.4.0",
    "@connectrpc/connect-web": "^1.4.0",
    "@connectrpc/protoc-gen-connect-es": "^1.4.0",
    "@reduxjs/toolkit": "^2.2.5",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-redux": "^7.1.33",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^9.0.11",
    "jwt-decode": "^4.0.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prism-react-renderer": "^2.3.1",
    "rc-slider": "^10.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "react-json-view": "github:chacha912/react-json-view#master",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "sass": "^1.77.6",
    "typescript": "~5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-commonjs": "^0.10.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "yorkie-js-sdk": "^0.4.24",
    "yorkie-ui": "^0.5.32"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": "eslint"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "build:proto": "npx buf generate",
    "fetch:ui": "./scripts/fetch-ui.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react/recommended"
    ],
    "plugins": [
      "spellcheck"
    ],
    "rules": {
      "spellcheck/spell-checker": [
        "warn",
        {
          "strings": false,
          "skipWords": [
            "checkbox",
            "req",
            "pb",
            "nanos",
            "pathname",
            "idx",
            "unix",
            "unregister",
            "apikeys",
            "webhook",
            "updatable",
            "protobuf",
            "grpc",
            "bg",
            "str",
            "signup",
            "unary",
            "invoker",
            "uint",
            "dropdown",
            "mb",
            "py",
            "rpc",
            "serializable",
            "cdn",
            "yorkie",
            "sdk",
            "focusable",
            "href",
            "ctx",
            "mailto",
            "jsx",
            "svg",
            "gnb",
            "resize",
            "indexable",
            "protoc",
            "dts",
            "commonjs"
          ],
          "skipIfMatch": [
            "TODO\\(.+\\):",
            "NOTE\\(.+\\):"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
