{
  "name": "dashboard",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://yorkie.dev/dashboard",
  "dependencies": {
    "@bufbuild/protobuf": "^1.6.0",
    "@connectrpc/connect": "^1.2.0",
    "@connectrpc/connect-web": "^1.2.0",
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.20.47",
    "@types/react": "^16.14.24",
    "@types/react-dom": "^16.9.14",
    "@types/react-redux": "^7.1.23",
    "classnames": "^2.3.2",
    "date-fns": "^3.6.0",
    "husky": "^7.0.4",
    "jwt-decode": "^3.1.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prism-react-renderer": "^1.3.5",
    "rc-slider": "^10.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.33.1",
    "react-json-view": "chacha912/react-json-view#master",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.0",
    "sass": "^1.55.0",
    "typescript": "~4.1.5",
    "yorkie-js-sdk": "^0.4.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": "eslint"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:proto": "npx buf generate",
    "fetch:ui": "./scripts/fetch-ui.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react/recommended"
    ],
    "plugins": [
      "spellcheck"
    ],
    "rules": {
      "spellcheck/spell-checker": [
        "warn",
        {
          "strings": false,
          "skipWords": [
            "checkbox",
            "req",
            "pb",
            "nanos",
            "pathname",
            "idx",
            "unix",
            "unregister",
            "apikeys",
            "webhook",
            "updatable",
            "protobuf",
            "grpc",
            "bg",
            "str",
            "signup",
            "unary",
            "invoker",
            "uint",
            "dropdown",
            "mb",
            "py",
            "rpc",
            "serializable",
            "cdn",
            "yorkie",
            "sdk",
            "focusable",
            "href",
            "ctx",
            "mailto",
            "jsx",
            "svg",
            "gnb",
            "resize",
            "indexable",
            "protoc",
            "dts",
            "commonjs"
          ],
          "skipIfMatch": [
            "TODO\\(.+\\):",
            "NOTE\\(.+\\):"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.28.1",
    "@bufbuild/protoc-gen-es": "^1.6.0",
    "@connectrpc/protoc-gen-connect-es": "^1.2.0",
    "autoprefixer": "^10.4.4",
    "eslint-plugin-spellcheck": "^0.0.19",
    "postcss": "^8.4.12"
  }
}
